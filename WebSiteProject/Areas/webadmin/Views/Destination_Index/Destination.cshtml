@*destination 觀光區編輯*@

@model IEnumerable<WebSiteProject.Models.F_Destination_Type>

@{
    if (TempData["Msg"] != null)
    {
        <script>
            $(function () {
                var Msg = @Html.Raw(Json.Encode(TempData["Msg"]));
                alert(Msg);
            });
        </script>
    }
}

<style>
    hr {
        margin: 0px;
        border-top: 0px solid #eee;
    }

    .Five_Thingtodo_Header {
        background-color: lightgray;
        font-weight: bolder;
    }
</style>

<!--page bar start-->
<div class="page-bar all_width">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            Destinations
            <i class="fa fa-circle"></i>
        </li>
        <li>目的地設定</li>
    </ul>
</div>
<!--page bar end-->

<div class="title_01">Destinations</div>
<div id="Partial_Index_MenuLink">
    <!--.......-->
</div>




<div class="portlet light bordered" style="padding-bottom:50px">
    <div class="title_04">@(ViewBag.FreeZoneTitleID == 1 ? "自由編輯區一" : "目的地設定")</div>

    <div class="form-horizontal form-bordered" id="editform" enctype="multipart/form-data">

        <div class="portlet light form-fit bordered">
            <div class="portlet-body form">
                <div class="form-horizontal form-bordered">
                    <div class="form-body" id="form-body">

                        <form method="post" action="@Url.Action("Destination","Destination_Index")" class="Five_Thingtodo_Header" id="editform">
                            <div class="form-group ">
                                <div class="col-md-1 col-sm-12 col-xs-12 text-center">
                                    <span class="display_inline">序號</span>
                                </div>
                                <div class="col-md-2 col-sm-12 col-xs-12 text-center ">
                                    <span class="display_inline">標題(上)</span>
                                </div>
                                <div class="col-md-2 col-sm-12 col-xs-12  text-center">
                                    <span class="display_inline">標題(下)</span>
                                </div>
                                <div class="col-md-2 col-sm-12 col-xs-12   text-center">
                                    <span class="display_inline">圖片</span>
                                </div>
                                <div class="col-md-5 col-sm-12 col-xs-12   text-center">
                                    <span class="display_inline">說明</span>
                                </div>

                            </div>
                            <hr class="Five_Thingtodo_div" />

                            @{
                                var x = 0;
                                foreach (var item in Model)
                                {

                                    <div class="form-group" style="background-color:white">
                                        <input type="hidden" name="F_DES[@x].Destination_Type_ID" id="Destination_Type_ID" value="@item.Destination_Type_ID" />
                                        <input type="hidden" name="F_DES[@x].Destination_Type_Link" id="Destination_Type_Link" value="@item.Destination_Type_Link" />
                                        <input type="hidden" name="F_DES[@x].Destination_Type_CreateDate" id="Destination_Type_CreateDate" value="@item.Destination_Type_CreateDate" />

                                        <div class="col-md-1 col-sm-12 col-xs-12 text-center">
                                            <span class="display_inline">
                                                <label type="text" name="F_DES[@x].Destination_Type_ID" id="Destination_Type_ID"> @item.Destination_Type_ID</label>
                                            </span>
                                        </div>

                                        <div class="col-md-2 col-sm-12 col-xs-12 text-center ">
                                            <span class="display_inline">
                                                <input type="text" name="F_DES[@x].Destination_Type_Title1" id="Destination_Type_Title1" value="@item.Destination_Type_Title1" class="form-control" />
                                            </span>
                                        </div>

                                        <div class="col-md-2 col-sm-12 col-xs-12 bg-white mobile_white forest_link text-center">
                                            <div class="col-md-11 col-sm-12 col-xs-12 bg-white mobile_white forest_link">
                                                <input type="text" name="F_DES[@x].Destination_Type_Title2" id="Destination_Type_Title2" value="@item.Destination_Type_Title2" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="col-md-2 col-sm-12 col-xs-12 bg-white mobile_white forest_link text-center align-center">
                                            <img id="Index_Img_File@(x)" src="@Url.Content("~/UploadImage/ThingsToDo_Img/")@item.Destination_Type_ImgName" />
                                            <br />
                                            @*<label for="Index_Img_File">
                                                    <input type="button" id="btn" value="傳送檔案"><span id="Img_FileName">@item.Destination_Type_ImgName</span>
                                                    <input data-imgid="Index_Img_File@(x)" name="F_DES[@x].Destination_Type_ImgName" type="file" id="Index_Img_File" accept=".jpeg,.jpg,.gif,.png" style="display:none" />

                                                </label>*@
                                            <input data-imgid="Index_Img_File@(x)" name="Img_File" type="file" accept=".jpeg,.jpg,.gif,.png" />
                                            <label for="Index_Img_File@(x)" style="display:none"></label>
                                            <input id="Img_FileName@(x)" name="F_DES[@x].Destination_Type_ImgName" class="selected" value="@item.Destination_Type_ImgName" style="display:none">
                                        </div>

                                        <div class="col-md-5 col-sm-12 col-xs-12 bg-white mobile_white">
                                            <textarea name="F_DES[@x].Destination_Type_Description" id="Destination_Type_Description" style="resize:none; height:160px" class="form-control">@item.Destination_Type_Description</textarea>
                                        </div>
                                    </div>
                                    <hr class="Five_Thingtodo_div" />
                                    @*</form>*@
                                    x = x + 1;
                                }

                            }
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white text-center " id="div_buttons" style="margin:10px;padding:10px">
                                <button type="submit" class="btn blue" id="btn_submit">確認送出</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        @*<div class="text-center search_padding">
                <button type="submit" class="btn blue" id="btn_submit">確認送出</button>
            </div>*@
    </div>

</div>




@section scripts{
    <script>
        var number;
        $(function () {


            //顯示圖片
            ShowImg();


            //圖片上傳修改
            $("#btn").click(function () {
                $('#Index_Img_File').trigger("click");

            })




            //送出表單
            $("#editform").submit(function () {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        console.log("success");

                    }
                });


            })


            number = $("#editform>hr").length;
            console.log(number);




        })






        //圖片上傳修改
        function ShowImg() {

            $("input[type='file']").change(function () {

                var imgid = $(this).attr("data-imgid");
                var reader = new FileReader();
                reader.readAsDataURL(this.files[0]);
                var p = this.files[0].name;
                $(this).parent().children(".selected").val(p)
                reader.onload = function (e) {

                    $(`#${imgid}`).attr("src", e.target.result)


                };
            })

        }


    </script>
}
