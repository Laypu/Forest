<script>
    $(function () {
        $(".chkstatus").change(function () {
            if ($(this).prop("checked") == true) {
                $(this).val(true);
            }
            else
            {
                $(this).val(false);
            }
        });


        ShowImg()
        //送出表單
        $("#btn_submit").click(function () {
            

            $.ajax({
                type: "POST",
                url: '@Url.Action("Edit", "Destination_Index")',
                data: $("#editform1,#editform2,#editform3").serialize(),
                success: function (data) {

                    alert("修改成功")
                }
            });


        });

        $("#btn_return").click(function () {
            history.go(-1);
        });

        
        function ShowImg() {

            $("input[type='file']").change(function () {

                var imgid = $(this).attr("data-imgid");
                var reader = new FileReader();
                reader.readAsDataURL(this.files[0]);

                var p = this.files[0].name;
                
                $(this).parent().children(".selected").val(p)
                reader.onload = function (e) {

                    $(`#${imgid}`).attr("src", e.target.result)

                    
                };
                

                var file_data = $(this).prop('files')[0];

                

                var form_data = new FormData();  //建構new FormData()
                form_data.append('Img_File', file_data);
               
                    $.ajax({
                        type: "POST",
                        url: `@Url.Action("Upload","Destination_Index")`,
                        data: form_data,
                        async: false,
                        contentType: false,
                        processData:false,
                        success: function (data) {
                        
                        }
                    });

            })

        }

        RegisterClickAll("#chk_all", '#faretable tbody .chksel', "#selvalue");

        
        
        $("#btn_del").click(function () {
            
            if (confirm('確定要刪除嗎??'))
            {
                var farecheck = $("#faretable tbody .chksel:checked");
                
                farecheck.each(function () {
                    var chargeID = $(this).parent().parent().next().children(".chargeID").val();
                    //formdata.append("chargeID", chargeID);
                   
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete", "Destination_Index")',
                        dataType:'json',
                        data: { chargeID:chargeID },
                        success: function (data) {
                            
                            $("#editform2").load(location.href + " #editform2 >*");//location.href + " #editform2"內的" #editform2"#前的空白很重要

                        }
                    });
                })
                @*window.location.href = "@Url.Action("delete","Destination_Index")" + "?chargeID=" + formdata;*@
                
            }

            
        })

        RegisterClickAll("#chkAD_all", '#ADtable tbody .chksel', "#selvalue");

        $("#btn_delAD").click(function () {
            
            if (confirm('確定要刪除嗎??'))
            {
                var ADcheck = $("#ADtable tbody .chksel:checked");
                var DESTypeID = DESTypeID;
                ADcheck.each(function () {
                    var ADid = $(this).parent().parent().next().children(".ADid").val();
                    //formdata.append("chargeID", chargeID);
                   
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("DeleteAD", "Destination_Index")',
                        dataType:'json',
                        data: {
                            ADid: ADid,
                             
                        },
                        success: function (data) {
                            
                            $("#editform3").load(location.href + " #editform3>*");//location.href + " #editform2"內的" #editform2"#前的空白很重要

                        }
                    });
                })
                @*window.location.href = "@Url.Action("delete","Destination_Index")" + "?chargeID=" + formdata;*@
                
            }

            
        })
        

    })

</script>