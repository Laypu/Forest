                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-md-2">行程圖片_圖片說明</label>
                                        <div class="col-md-10 margin_bottom">
                                            @Html.EditorFor(model => model.RecommendedTrips_Img_Description, new { htmlAttributes = new { @class = "form-control  inline-block" } })
