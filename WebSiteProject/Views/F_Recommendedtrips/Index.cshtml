<script>
    window.onload = function () {
        $(".owl-prev").attr("title", "@(Common.GetLangText("Previous"))").attr("tabindex", "0");
        $(".owl-next").attr("title", "@(Common.GetLangText("Next"))").attr("tabindex", "0");
        $(".tp-leftarrow").attr("title", "@(Common.GetLangText("Previous"))");
        $(".tp-rightarrow").attr("title", "@(Common.GetLangText("Next"))");
        $("#mainNav>li:nth-child(3)").children().addClass("active").parent().siblings().children().removeClass("active");

        $(".trip_search_btn > a").click(function () {
            var id = $(this).attr("data-ID");
            location.href = `@Url.Action("recommended_list")/?Day_Id=${id}`
        })
    }
</script>
