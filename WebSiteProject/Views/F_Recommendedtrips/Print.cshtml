@model WebSiteProject.Models.RecommendedTrip
@{
    Layout = null;
    ViewBag.SEOScript = WebSiteProject.Code.CacheMapping.SEOScript;
}
<!DOCTYPE html>
<html lang="en" xml:lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />

    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800%7CShadows+Into+Light" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/theme.css")">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/theme-elements.css")/">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/settings.css")" media="screen">

    <!--fontawesome start-->
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/fontawesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/brands.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/solid.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/regular.min.css")">
    <!--fontawesome end-->

    <link rel="stylesheet" href="@Url.Content("~/frontcss/css/style.css")">
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-migrate-3.0.0.min.js")"></script>
    @*<script src="@Url.Content("~/js/jquery.js")"></script>*@
    <script src="@Url.Content("~/js/main.js")"></script>
    <script src="@Url.Content("~/js/scrollReveal.js")"></script>
    <noscript>
        <link rel="stylesheet" href="@Url.Content("~/frontcss/css/noscript.css")">
    </noscript>
    @{
        var SEOScriptArr = ViewBag.SEOScriptArr;
    }
    @if (SEOScriptArr != null)
    {

        if (string.IsNullOrEmpty(SEOScriptArr[3]) == false)
        {

            <title>@Model.RecommendedTrips_Title - @SEOScriptArr[3]</title>
        }
        else
        {
            <title>@Model.RecommendedTrips_Title - @SEOScriptArr[3]</title>
        }
        if (SEOScriptArr[1] != "")
        {
            @Html.Raw(SEOScriptArr[1])
        }
        if (SEOScriptArr[0] != "")
        {
            <meta name="description" content="@Model.RecommendedTrips_Title - @SEOScriptArr[0]" />
        }
    }
    else
    {

        <title>Hidden Treasure of ASIA</title>
    }
    <meta name="google-site-verification" content="4j4ecKUAGRYw60NCyofmhQSS9QGgTQGSAf3FwCb7wgk" />
</head>
<body style="max-width:806px; margin:0 auto; background: url(@Url.Content("~/img/bg_05.jpg"));">
    <div class="con_box">
        <div class="con_banner"><img src="@Url.Content("~/img/print_banner.jpg")" alt="" /></div><!--建議尺寸740*185px-->
        <h2>@Model.RecommendedTrips_Title</h2>

        <div class="edit_con">
            <!--文繞圖 start-->
            @if (string.IsNullOrEmpty(Model.ImageFileName) == false)
            {
                <!--圖片置左-->
                if (Model.ImageFileLocation == "1")
                {
                    <img src="@Url.Content("~/UploadImage/RecommendedTrips/")@Model.ImageFileName" class="img_padding" alt="@Model.ImageFileDesc" align="left">
                }
                else if (Model.ImageFileLocation == "2")
                {
                    <div align="center"><p class="text_center"><img src="@Url.Content("~/UploadImage/RecommendedTrips/")@Model.ImageFileName" class="img_padding" alt="@Model.ImageFileDesc"></p></div>
                }
                else if (Model.ImageFileLocation == "3")
                {
                    <img src="@Url.Content("~/UploadImage/RecommendedTrips/")@Model.ImageFileName" class="img_padding" alt="@Model.ImageFileDesc" align="right">
                }

            }
            @Html.Raw(HttpUtility.HtmlDecode(Model.RecommendedTrips_HtmContent)@*/*.safeHtmlFragment*/*@)
        </div>

    </div>
    <div class="con_footer">Copyright &copy; 2020 Forestry Bureau All rights reserved</div>
</body>
</html>