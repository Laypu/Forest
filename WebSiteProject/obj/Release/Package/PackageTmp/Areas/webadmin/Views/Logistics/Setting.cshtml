@model LogisticsSettingEditModel
<script src="@Url.Content("~/Scripts/datatable.js")"></script>
<script src="@Url.Content("~/Scripts/custom.js")"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
<!--page bar start-->
<div class="page-bar all_width">
    <ul class="page-breadcrumb">
        <li>
            <span href="#">Home</span>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span href="#">物流設定</span>
        </li>
    </ul>
</div>
<!--page bar end-->
                <!--message start-->
<div class="title_01">物流設定</div>

<div class="portlet light bordered">

    <!--set item start-->
    <div class="table-toolbar">
        <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="display_inline">
                <p class="btn_03">管理項目</p>
                <select class="form_02" onChange="window.location.href=this.value">
                    <option value="#">物流設定</option>
                    <option value="@Url.Action("Company")">物流公司管理</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12 mobile_left">
        </div>
    </div>
    <!--set item end-->
    <form class="form-horizontal form-bordered" method="Post" id="editform" action='@Url.Action("SaveSetting")' enctype="multipart/form-data">
        <!--page content start-->
        <div class="portlet light form-fit bordered">
            <div class="portlet-body form">
                <div class="form-horizontal form-bordered">
                    <div class="form-body">

                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">郵寄</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">

                                <label class="mt-checkbox mt-checkbox-outline float_left">
                                    @Html.CheckBoxFor(m => m.MailingUse, new { @class = "checkboxes" }) 提供<span></span>
                                </label>

                                <div class="font_input">
                                    <span class="input_left_font">運費</span>
                                    @Html.EditorFor(model => model.MailingFee, new { htmlAttributes = new { @class = "form-control input-xsmall" } })
                                    <span class="required" id="MailingFee-error" style="display:none;">運費 必須填寫！</span>
                                </div>

                                <div class="font_input">
                                    <span class="input_left_font">單筆購物滿</span>
                                    @Html.EditorFor(model => model.MailingFreeFee, new { htmlAttributes = new { @class = "form-control input-xsmall" } })
                                    <span class="input_right_font">元，免運費</span>
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">宅配</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">

                                <label class="mt-checkbox mt-checkbox-outline float_left">
                                    @Html.CheckBoxFor(m => m.DeliveryUse, new { @class = "checkboxes" }) 提供<span></span>
                                    <span></span>
                                </label>

                                <div class="font_input">
                                    <span class="input_left_font">運費</span>
                                    @Html.EditorFor(model => model.DeliveryFee, new { htmlAttributes = new { @class = "form-control input-xsmall" } })
                                    <span class="required" id="DeliveryFee-error" style="display:none;">運費 必須填寫！</span>
                                </div>

                                <div class="font_input">
                                    <span class="input_left_font">單筆購物滿</span>
                                    @Html.EditorFor(model => model.DeliveryFreeFee, new { htmlAttributes = new { @class = "form-control input-xsmall" } })
                                    <span class="input_right_font">元，免運費</span>
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">貨運</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">

                                <label class="mt-checkbox mt-checkbox-outline float_left">
                                    @Html.CheckBoxFor(m => m.FreightUse, new { @class = "checkboxes" }) 提供<span></span>
                                    <span></span>
                                </label>

                                <div class="font_input">
                                    <span class="input_left_font">運費</span>
                                    @Html.EditorFor(model => model.FreightFee, new { htmlAttributes = new { @class = "form-control input-xsmall" } })
                                    <span class="required" id="FreightFee-error" style="display:none;">運費 必須填寫！</span>
                                </div>

                                <div class="font_input">
                                    <span class="input_left_font">單筆購物滿</span>
                                    @Html.EditorFor(model => model.FreightFreeFee, new { htmlAttributes = new { @class = "form-control input-xsmall" } })
                                    <span class="input_right_font">元，免運費</span>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <!--page content end-->

        <div class="text-center search_padding">
            <button type="submit" class="btn blue">確定</button>
        </div>

    </form>
   
</div>
<!--message end-->
@section scripts {
    <script>
        $(document).ready(function () {
            $('#editform').submit(function (event) {

                var iscon = true;
                $(".required").hide();
                if ($("#MailingUse")[0].checked) {
                    if ($("#MailingFee").val()=="") {
                        $("#MailingFee-error").show();
                        iscon = false;
                    }
                }
                if ($("#DeliveryUse")[0].checked) {
                    if ($("#DeliveryFee").val() == "") {
                        $("#DeliveryFee-error").show();
                        iscon = false;
                    }
                }
                if ($("#FreightUse")[0].checked) {
                    if ($("#FreightFee").val() == "") {
                        $("#FreightFee-error").show();
                        iscon = false;
                    }
                }
                if (iscon == false) { return false; }
                var formData = new FormData();
                var array = $('#editform').serializeArray();
                $.each(array, function () {
                    formData.append(this.name, this.value);
                });
                $.ajax({
                    url: this.action,
                    data: formData,
                    type: 'POST',
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        alert(data);
                    }, error: function () {
                        // handle error
                    }
                });
                return false;
            });
        });
    </script>
}
