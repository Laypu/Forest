@model ViewModels.LogInViewModel
@{
    Layout = null;
}
<link href="~/Content/admincss/font-awesome.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.LoginTitle</title>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    @Styles.Render("~/Content/login")
    <link rel="shortcut icon" href="@Url.Content("~/img/favicon.ico")" />
</head>

<body class="login">
    <div class="logo_title">@ViewBag.CompName</div>
    <div style="max-width:800px; margin:0 auto">
        <div class="login_box">
            <div class="col-md-6 col-sm-12 col-xs-12 login_con">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="title_02 text-center">管理者登入</div>
                    <div class="all_width">@Resource.Account</div>
                    <div class="all_width">
                        @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form_01", placeholder = Resource.PlaceHolderForAccount } })
                        @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                    </div>
                    <div class="all_width">@Resource.Password</div>
                    <div class="all_width">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form_01", placeholder = Resource.PlaceHolderForPassword } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</div>
                    <div class="all_width">驗證碼</div>
                    <div class="all_width">
                        @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form_01",style= "width:50%", placeholder = "請輸入驗證碼" } })&nbsp;
                        <span class="visible-xs"><br></span><img src="@ViewBag.image" alt="驗證碼" style="vertical-align:middle;" id="img_captch" />&nbsp;&nbsp;&nbsp;<a href="#" id="a_captchRefresh">重新整理</a>
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <div class="all_width" style="display:none"><a href="member_forget.html"><span class="red">忘記密碼？</span></a></div>
                    <div class="all_width"><br></div>
                    <div class="all_width text-center "><input type="submit" class="btn_02" value="登入"></div>
                }

            </div>
            <div class="col-md-6 col-sm-12 col-xs-12 login_con">
                <div class="login_info">
                    <div class="title_02 text-center">管理系統使用說明</div>
                    <ul style="margin-left:-15px;">
                        <li>本系統由雷普科技提供服務，如有任何系統上的問題，請電洽+886-2-29599800，將由專員為您服務</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@Scripts.Render("~/bundles/login")
<script type="text/javascript">
    $(document).ready(function () {
        $("#a_captchRefresh").click(function () {
            $.post('@Url.Action("CaptchRefresh")', null, function (data) {
                $("#img_captch").attr('src', data);
            });
        });

        var message = '';
        @if (Model != null) {
           <text>message = '@Model.Message';</text>
        }
        if (message !== '') {
            alert(message);
        }
    });
</script>