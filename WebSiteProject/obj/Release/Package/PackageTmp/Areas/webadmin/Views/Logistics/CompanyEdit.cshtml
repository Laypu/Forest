@model LogisticsSettingEditModel
<script src="@Url.Content("~/Scripts/datatable.js")"></script>
<script src="@Url.Content("~/Scripts/custom.js")"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
<!--page bar start-->
<div class="page-bar all_width">
    <ul class="page-breadcrumb">
        <li>
            <span href="#">Home</span>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span href="#">物流設定</span>
        </li>
    </ul>
</div>
<!--page bar end-->
                <!--message start-->
<div class="title_01">物流設定</div>

<div class="portlet light bordered">

    <!--page content start-->
    <div class="portlet light form-fit bordered">
        <div class="portlet-body form">
            <div class="form-horizontal form-bordered">
                <div class="form-body">

                    <div class="form-group">
                        <div class="col-md-2 col-sm-2 col-xs-12 search_item">*寄送方式</div>
                        <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">

                            <select class="form-control_01" id="sel_sendtype">
                                <option selected="selected" value="M">郵寄</option>
                                <option value="D">宅配</option>
                                <option value="F">貨運</option>
                            </select>
                            <span class="required" id="sendtype-error" style="display:none;">寄送方式 必須填寫！</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2 col-sm-2 col-xs-12 search_item">*物流公司</div>
                        <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">

                            <input class="form-control input-medium" type="text" value="@ViewBag.company"  id="txt_company"/>
                            <span class="required" id="company-error" style="display:none;">物流公司 必須填寫！</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2 col-sm-2 col-xs-12 search_item">物流進度查詢網址</div>
                        <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">

                            <input class="form-control" type="text" value="@ViewBag.searchwebsite"  id="txt_searchwebsite"/>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <!--page content end-->

    <div class="text-center search_padding">
        <button type="button" class="btn blue" id="btn_send">@ViewBag.buttonname</button>
    </div>

</div>
<!--message end-->
@section scripts {
    <script>
        $(document).ready(function () {
            $("#sel_sendtype").val('@ViewBag.sendtype')
          
            $('#btn_send').click(function () {
                $(".required").hide();
                var iscon = true;
                if ($("#sel_sendtype").val() == null || $("#sel_sendtype").val() == undefined) {
                    $("#sendtype-error").show();
                    iscon = false;
                }
                if ($("#txt_company").val() == "") {
                    $("#company-error").show(); iscon = false;
                }
                if (iscon == false) { return false; }

                var obj = {};
                obj.ID = '@ViewBag.ID';
                obj.sendtype = $("#sel_sendtype").val();
                obj.company = $("#txt_company").val();
                obj.searchwebsite = $("#txt_searchwebsite").val();
                $.post('@Url.Action("SaveCompanyEdit")', obj, function (data) {
                    alert(data);
                     CreatePost('@Url.Action("Company")');
                });
            });
        });
    </script>
}
