
@*@{
    Layout = "~/Areas/webadmin/Views/Shared/_Layout.cshtml";
}*@

<!--page bar start-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Model")">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>模組元件<i class="fa fa-circle"></i></li>
    </ul>

</div>
<!--page bar end-->
<!--message start-->
<div class="title_01">Recommended trips 管理</div>

<div class="mod_list">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
        <div class="mt-widget-3">
            <div class="mt-head" onclick="location.href='@Url.Action("Index", "AD", new { type = "main" , stype = "P", site_id = 15, MenuType=176})'">
                <div class="mt-head-icon">
                    <i class="icon-speech"></i>
                </div>
                <div class="mt-head-desc">輪播牆設定(電腦版)</div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
        <div class="mt-widget-3">
            <div class="mt-head" onclick="location.href='@Url.Action("Index", "AD", new { type = "main" , stype = "M", site_id = 15, MenuType=176})'">
                <div class="mt-head-icon">
                    <i class="icon-speech"></i>
                </div>
                <div class="mt-head-desc">輪播牆設定(手機板)</div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
        <div class="mt-widget-3">
            <div class="mt-head" onclick="location.href='@Url.Action("RecommendedtripsIndex", "Recommendedtrips")'">
                <div class="mt-head-icon">
                    <i class="icon-bell"></i>
                </div>
                <div class="mt-head-desc">推薦行程主版設定(標題&文字)</div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
        <div class="mt-widget-3">
            <div class="mt-head" onclick="location.href='@Url.Action("Recommendedtrips_item", "Recommendedtrips")'">
                <div class="mt-head-icon">
                    <i class="icon-camcorder"></i>
                </div>
                <div class="mt-head-desc">推薦行程設定</div>
            </div>
        </div>
    </div>
</div>

<!--message end-->
@section scripts {
    <script>
        $(document).ready(function () {
            $(".index").click(function () {
                var url = $(this).attr('url');
                window.location.href = url;
            });
        });

    </script>
}


