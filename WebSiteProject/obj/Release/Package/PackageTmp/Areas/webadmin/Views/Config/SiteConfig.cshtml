@model SiteConfigModel
<!--page bar start-->
<div class="page-bar all_width">
    <ul class="page-breadcrumb">
        <li>
            <span href="#">Home</span>
            <i class="fa fa-circle"></i>
            <span href="#">系統管理</span>
            <i class="fa fa-circle"></i>
            <span href="#">管理介面設定</span>
        </li>
    </ul>
</div>
<!--page bar end-->
<!--message start-->
<div class="member_title">@ViewBag.Title</div>

<div class="portlet light bordered">
    <form class="form-horizontal form-bordered" method="Post" id="editform" action='@Url.Action("SaveSiteConfig")' enctype="multipart/form-data">
        @Html.HiddenFor(Model => Model.ID)
        <div class="portlet light form-fit bordered">
            <div class="portlet-body form">
                <div class="form-horizontal form-bordered">
                    <div class="form-body" id="form-body">

                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">
                                <img src="@Url.Content("~/img/Icon_01.gif")" style="margin:0px 5px 5px 0px" />登入頁
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">

                            </div>
                            <div class="col-md-6 col-sm-6 hidden-xs bg-white">&nbsp;</div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">視窗標題文字</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                @Html.EditorFor(model => model.Login_Title, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">公司名稱</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                @Html.EditorFor(model => model.Comp_Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">
                                <img src="@Url.Content("~/img/Icon_01.gif")" style="margin:0px 5px 5px 0px" />後台管理內頁
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">

                            </div>
                            <div class="col-md-6 col-sm-6 hidden-xs bg-white">&nbsp;</div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">視窗標題文字</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                @Html.EditorFor(model => model.Page_Title, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group" style="display:none">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">網站Logo</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">
                                <input type="file" id="fileupload" class="form-control mobile_input display_inline" name="uploadfile">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center search_padding">
            <button type="submit" class="btn blue" id="btn_submit">確認送出</button>
        </div>
       </form>

</div>
@section scripts {
    <script>
        $(function () {
            var message = '@TempData["Message"]';
            if (message != "") { alert(message); }
            $('#editform').submit(function (event) {
               
                var formData = new FormData();
                var array = $('#editform').serializeArray();
                $.each(array, function () {
                    formData.append(this.name, this.value);
                });

                $.ajax({
                    url: this.action,
                    data: formData,
                    type: 'POST',
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        alert(data);
                        document.location.href = '@Url.Action("SiteConfig")';
                    }, error: function () {
                        // handle error
                    }
                });
                return false;


            });

        });
    </script>

}

