@model ArticleEditModel
<script src="@Url.Content("~/Scripts/components-date-time-pickers.min.js")"></script>
<script src="@Url.Content("~/Scripts/bootstrap-datepicker.min.js")"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
<script src="@Url.Content("~/Scripts/custom.js")"></script>
<!--page bar start-->
<div class="page-bar all_width">
    <ul class="page-breadcrumb">
        <li>
            @*<a href="@Url.Action("Index","Home")">Home</a>*@
            <span href="#">Home</span>
            <i class="fa fa-circle"></i>
            @*<a href="@Url.Action("ModelItem",new { mainid =Model.ModelID})">模組元件</a>*@
            <span href="#">模組元件</span>
            <i class="fa fa-circle"></i>
            <span href="#">文章管理</span>
        </li>
    </ul>
</div>
<!--page bar end-->
<!--message start-->
<div class="member_title">文章管理</div>

<div class="portlet light bordered">

    <form class="form-horizontal form-bordered" method="Post" id="editform" action='@Url.Action("SaveItem")' enctype="multipart/form-data">
        <div class="search_padding">
            <button type="button" class="btn blue" id="btn_seoshow">進階設定</button>
        </div>
        @Html.HiddenFor(Model => Model.ItemID)
        @Html.HiddenFor(Model => Model.ModelID)
        @Html.HiddenFor(Model => Model.UploadFileName)
        @Html.HiddenFor(Model => Model.UploadFilePath)
        @Html.HiddenFor(Model => Model.ImageFileName)
        @Html.HiddenFor(Model => Model.PageImageFileName)
        <div class="portlet light form-fit bordered" style="display:none" id="div_seo">
            <div class="portlet-body form">
                <div class="form-horizontal form-bordered">
                    <div class="form-body" id="form-body">
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">網站標題</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                <div class="input-group input-large">
                                    @Html.EditorFor(model => model.WebsiteTitle, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 hidden-xs bg-white">&nbsp;</div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">網站描述</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                <div class="input-group input-large">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 hidden-xs bg-white">&nbsp;</div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">網頁內容關鍵字</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white form-horizontal">
                                <input id="Keywords_1" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[0]" value="@Model.Keywords[0]" />
                                <input id="Keywords_2" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[1]" value="@Model.Keywords[1]" />
                                <input id="Keywords_3" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[2]" value="@Model.Keywords[2]" />
                                <input id="Keywords_4" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[3]" value="@Model.Keywords[3]" />
                                <input id="Keywords_5" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[4]" value="@Model.Keywords[4]" /><br />
                                <input id="Keywords_6" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[5]" value="@Model.Keywords[5]" />
                                <input id="Keywords_7" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[6]" value="@Model.Keywords[6]" />
                                <input id="Keywords_8" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[7]" value="@Model.Keywords[7]" />
                                <input id="Keywords_9" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[8]" value="@Model.Keywords[8]" />
                                <input id="Keywords_10" type="text" class="form-control  input-small" style="display:inline-block" name="Keywords[9]" value="@Model.Keywords[9]" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="portlet light form-fit bordered">
            <div class="portlet-body form">
                <div class="form-horizontal form-bordered">
                    <div class="form-body" id="form-body2">
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">類別名稱</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                @Html.DropDownList(@Html.IdFor(m => m.Group_ID).ToString(), (IEnumerable<SelectListItem>)ViewBag.grouplist, new { @class = "form_02" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">發佈日期</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                    @Html.EditorFor(model => model.PublicshStr, new { htmlAttributes = new { @class = "form-control checkitem", placeholder = "發佈日期" } })
                                    <span class="required" id="PublicshStr-error" style="display:none;">發佈日期 必須填寫！</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">顯示日期</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">
                                <div class="input-group input-large" style="float:left">
                                    <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                        @Html.EditorFor(model => model.StDateStr, new { htmlAttributes = new { @class = "form-control", placeholder = "開始日期" } })
                                    </div>
                                    <span class="input-group-addon"> to </span>
                                    <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                        @Html.EditorFor(model => model.EdDateStr, new { htmlAttributes = new { @class = "form-control", placeholder = "結束日期" } })
                                    </div>
                                </div>
                                <div class="" style="float:left">
                                    <button type="button" class="btn blue" id="btn_clear">清空</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">標題</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white form-horizontal">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control checkitem" } })
                                <span class="required" id="Title-error" style="display:none;">標題 必須填寫！</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">學員瀏覽權限設定</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">

                                <label class="mt-checkbox mt-checkbox-outline">
                                    @Html.CheckBoxFor(m => m.EnterpriceStudentAuth, new { @class = "checkboxes" })會員使用者
                                    <span></span>
                                </label>

                                <label class="mt-checkbox mt-checkbox-outline">
                                    @Html.CheckBoxFor(m => m.GeneralStudentAuth, new { @class = "checkboxes" })一般使用者
                                    <span></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 bg-grey_1 search_item">進階瀏覽權限設定 </div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">
                                <label class="mt-checkbox mt-checkbox-outline float_left">
                                    @Html.CheckBoxFor(m => m.VIPAuth, new { @class = "checkboxes " })會員VIP
                                    <span></span>
                                </label>

                                <label class="mt-checkbox mt-checkbox-outline float_left">
                                    @Html.CheckBoxFor(m => m.EMailAuth, new { @class = "checkboxes" })Email驗證
                                    <span></span>
                                </label>
                                <div class="required required_padding">(至少要勾選一學員身分，才可以設定進階)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">封面圖片</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">

                                <div id="div_oldpagefile" style="display:none"><a href="@Model.PageImageUrl" target="preview">@Model.PageImageFileOrgName</a><label style="color:blue;margin-left:10px;cursor:pointer" id="delpageimage">刪除</label></div>
                                <input id="file_pageimage" type="file" class="form-control" style="width:500px" name="ImageFile" accept="image/*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">內容</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">
                                <textarea cols="80" id="HtmlContent" rows="20">@Model.HtmlContent</textarea>
                            </div>
                        </div>
                        <div class="form-group bg-grey_1">
                            <div class="col-md-2 col-sm-12 search_item">圖片上傳</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white">
                                <div class="col-md-12">
                                    <div id="div_oldfile" style="display:none"><a href="@Model.ImageUrl" target="preview">@Html.Raw(Model.ImageFileOrgName)</a><label style="color:blue;margin-left:10px;cursor:pointer" id="delimage">刪除</label></div>
                                    <div style="display:inline">
                                        <label for="exampleInputFile" class="control-label display_inline">圖片上傳</label>
                                        <input id="file_image" type="file" class="form-control mobile_input display_inline" name="ImageFile" accept="image/*" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="control-label display_inline">圖片說明</label>
                                    @Html.EditorFor(model => model.ImageFileDesc, new { htmlAttributes = new { @class = "form-control mobile_input display_inline" } })
                                    <span class="required" id="ImageFileDesc-error" style="display:none;">圖片說明 必須填寫！</span>
                                </div>
                                <div class="col-md-12">
                                    <label class="control-label display_inline">圖片位置</label>
                                    <select name="@Html.IdFor(model=>model.ImageFileLocation)" id="@Html.IdFor(model=>model.ImageFileLocation)"><option value="1">左</option><option value="2">中</option><option value="3">右</option></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">相關連結</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                @Html.EditorFor(model => model.LinkUrl, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group bg-grey_1">
                            <div class="col-md-2 col-sm-12 search_item">檔案上傳</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white">
                                <div class="col-md-12">
                                    <div id="div_olduploadfile" style="display:none"><a href="@Url.Action("FileDownLoad")?modelid=@Model.ModelID&&itemid=@Model.ItemID" target="preview">@Model.UploadFileName</a><label style="color:blue;margin-left:10px;cursor:pointer" id="delupfile">刪除</label></div>
                                    <div id="div_nofile" style="display:inline">
                                        <label for="exampleInputFile" class="control-label display_inline">檔案上傳</label>
                                        <input type="file" id="uploadfile" class="form-control mobile_input display_inline" name="UploadFile">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="control-label display_inline">檔案說明</label>
                                    @Html.EditorFor(model => model.UploadFileDesc, new { htmlAttributes = new { @class = "form-control mobile_input display_inline" } })
                                    <span class="required" id="UploadFileDesc-error" style="display:none;">檔案說明 必須填寫！</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">相關圖片</div>
                            <div class="col-md-4 col-sm-4 col-xs-12 bg-white mobile_white">
                                @Html.DropDownList(@Html.IdFor(m => m.ActiveID).ToString(), (IEnumerable<SelectListItem>)ViewBag.activelist, new { @class = "form_02", style = "float:left" })
                                <div style="float:left; display:none" id="div_activeitem">
                                    <select id="sel_activeitem" name="ActiveItemID" class="form_02"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center search_padding">
            <button type="submit" class="btn blue" id="btn_submit">確認送出</button>
            <button type="button" class="btn blue" id="btn_return">返回列表</button>
        </div>
    </form>

</div>
@section scripts {
    <script>
        $(function () {
            checkAuth();
            $("#GeneralStudentAuth,#EnterpriceStudentAuth").change(function () {
                checkAuth();
            });
                $('#ImageFileLocation').val('@Model.ImageFileLocation');
            var selactiveitem = '@Model.ActiveItemID';
            $('#btn_clear').click(function () {
                $('#StDateStr').val('');
                $('#EdDateStr').val('');
            });
            var fileupload = '@Model.UploadFileName';
            if (fileupload!==""){
                $("#div_olduploadfile").show();
            }
            $("#btn_seoshow").click(function () {
                $("#div_seo").toggle(500);
            });
            $("#btn_return").click(function () { CreatePost('@Url.Action("ModelItem")', { mainid: '@Model.ModelID'});});
           if ('@Model.ItemID'>0 && '@Model.ImageFileName'!='') {
                $('#div_oldfile').show();
            }
            $('#delimage').click(function () {
                $('#div_oldfile').hide();
                $('#ImageFileName').val('');
           });

            if ('@Model.ItemID' > 0 && '@Model.PageImageFileName' != '') {
                  $('#div_oldpagefile').show();
            }

           $('#delpageimage').click(function () {
                  $('#div_oldpagefile').hide();
                  $('#PageImageFileName').val('');
           });

            $('#delupfile').click(function () {
                $('#div_olduploadfile').hide();
                $('#UploadFileName').val('');
            });

            var ckedit = CKEDITOR.replace('HtmlContent', {
                height: 300,
                filebrowserImageUploadUrl: '@Url.Action("Upload")?command=QuickUpload&type=Images'
            });
           $('#ActiveID').change(function () {
                var activeid = $('#ActiveID').val();
                $('#sel_activeitem').empty();
                if (activeid != '') { $('#div_activeitem').show(); } else { $('#div_activeitem').hide(); return false; }
                $.post('@Url.Action("GetActiveItem")', { modelid: activeid }, function (data) {
                    $(data).appendTo('#sel_activeitem');
                    if (selactiveitem != '') { $('#sel_activeitem').val(selactiveitem); selactiveitem = '';}
                });
            });
            if ('@Model.ActiveID' != '') {
                $('#ActiveID').trigger("change");
            }
           $('#editform').submit(function (event) {
               $(".required").hide();
                 var inputval = $("#form-body2 :input").filter(function () { return $(this).val() == "" && $(this).hasClass('checkitem'); });
                for (var idx = 0; idx < inputval.length; idx++) {
                    $("#" + inputval[idx].name + "-error").show();
                }
                if (inputval.length > 0) { return false; }
                var file = $("#file_image");
                var _validFileExtensions = [".jpg", ".png", ".gif"];
                var sFileName = file.val();
                if (sFileName.length > 0) {
                    var blnValid = false;
                    for (var j = 0; j < _validFileExtensions.length; j++) {
                        var sCurExtension = _validFileExtensions[j];
                        if (sFileName.substr(sFileName.length - sCurExtension.length, sCurExtension.length).toLowerCase() == sCurExtension.toLowerCase()) {
                            blnValid = true;
                            break;
                        }
                    }
                    if (!blnValid) {
                        alert("只能上傳Image檔案");
                        file.outerHTML = file.outerHTML;
                        return false;
                    }
                }

                file = $("#file_pageimage");
                sFileName = file.val();
                if (sFileName.length > 0) {
                    var blnValid = false;
                    for (var j = 0; j < _validFileExtensions.length; j++) {
                        var sCurExtension = _validFileExtensions[j];
                        if (sFileName.substr(sFileName.length - sCurExtension.length, sCurExtension.length).toLowerCase() == sCurExtension.toLowerCase()) {
                            blnValid = true;
                            break;
                        }
                    }
                    if (!blnValid) {
                        alert("只能上傳Image檔案");
                        file.outerHTML = file.outerHTML;
                        return false;
                    }
                }

                var formData = new FormData();
                var array = $('#editform').serializeArray();
                formData.append("HtmlContent", encodeURIComponent(CKEDITOR.instances.HtmlContent.getData()));
                $.each(array, function () {
                    formData.append(this.name, this.value);
                });
                var iscon = true;
                var images = $('#file_image').get(0).files;
                if (images.length > 0) {
                    formData.append("ImageFile", images[0]);
                    if ($('#ImageFileDesc').val() == "") {
                        $('#ImageFileDesc-error').show();
                        iscon = false;
                    }
                } else {
                    formData.append("ImageFile", null);
                    if ($('#ImageFileName').val() != "") {
                        if ($('#ImageFileDesc').val() == "") {
                            $('#ImageFileDesc-error').show();
                            iscon = false;
                        }
                    }
                }

                var uploadfile = $('#uploadfile').get(0).files;
                if (uploadfile.length > 0) {
                    formData.append("UploadFile", uploadfile[0]);
                    if ($('#UploadFileDesc').val() == "") {
                        $('#UploadFileDesc-error').show();
                        iscon = false;
                    }
                } else {
                    formData.append("UploadFile", null);
                    if ($('#UploadFileName').val() != "") {
                        if ($('#UploadFileDesc').val() == "") {
                            $('#UploadFileDesc-error').show();
                            iscon = false;
                        }
                    }
                }
                if (iscon == false) { return false; }
                var pageimage = $('#file_pageimage').get(0).files;
                if (pageimage.length > 0) {
                    formData.append("PageImageFile", pageimage[0]);
                } else {
                    formData.append("PageImageFile", null);
                }

                $.ajax({
                    url: this.action,
                    data: formData,
                    type: 'POST',
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        alert(data);
                       CreatePost('@Url.Action("ModelItem")', { mainid: '@Model.ModelID'});
                    }, error: function () {
                        // handle error
                    }
                });
                return false;
            });
        });
        function checkAuth() {
            if ($("#GeneralStudentAuth")[0].checked == false && $("#EnterpriceStudentAuth")[0].checked == false) {
                $("#VIPAuth").attr('disabled', 'disabled');
                $("#EMailAuth").attr('disabled', 'disabled');
                $("#VIPAuth").prop('checked', false);
                $("#EMailAuth").prop('checked', false);
            } else {
                $("#VIPAuth").removeAttr('disabled');
                $("#EMailAuth").removeAttr('disabled');
            }
        }
    </script>

}

