@model SearchModelBase
<script src="@Url.Content("~/Scripts/datatable.js")"></script>
<script src="@Url.Content("~/Scripts/custom.js")"></script>
<script src="@Url.Content("~/Scripts/bootbox.min.js")"></script>
<!--page bar start-->
<div class="page-bar all_width">
    <ul class="page-breadcrumb">
        <li>
            <span href="#">Home</span>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span href="#">物流公司管理</span>
        </li>
    </ul>
</div>
<!--page bar end-->
<div class="member_title"> 物流公司管理</div>
<div class="portlet light bordered">
    <!--set item start-->
    <div class="table-toolbar">
        <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="display_inline">
                <p class="btn_03">管理項目</p>
                <select class="form_02" onChange="window.location.href=this.value">
                    <option value="@Url.Action("Setting")">物流設定</option>
                    <option value="#" selected="selected">物流公司管理</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12 mobile_left">
            <button class="btn green-meadow" id="btn_add"  onclick="CreatePost('@Url.Action("CompanyEdit")',{id:'-1'})">新增 <i class="fa fa-plus"></i></button>
            <button class="btn red" id="btn_del">刪除 <i class="glyphicon glyphicon-trash"></i></button>
        </div>
    </div>
    <!--set item end-->
    <!--table start-->
    <div class="table-scrollable">
        <table class="table table-bordered table-hover" border="0" cellspacing="0" cellpadding="0" style="width:500px"
               id="eventtable"
               data-url="@Url.Action("PagingCompany")"
               data-sort-name='Sort'
               data-page-size='10'
               data-filed-id='ID'
               data-max-pagination='10'>
            <thead>
                <tr class="bg-grey_1" filed-class='odd gradeX'>
                    <th width="80px" class="text-center"  filed-type='delcheckbox'>
                         <label class='mt-checkbox mt-checkbox-single mt-checkbox-outline'>
                          <input type='checkbox' class='checkboxes' id="chk_all" /><span></span>
                          </label>刪除
                    </th>
                    <th filed-name='Sort' width="40px" class="text-center"  filed-type='numbertextcheck' filed-item-class="sortedit">排序</th>
                    <th filed-name='customertr' class="text-center" width="80px"  filed-type='function' >寄送方式</th>
                    <th  filed-name='Company'  class="text-center" filed-type='link'  >物流公司</th>
                </tr>
            </thead><tbody></tbody>
        </table>
    </div>
    <div id="page_number" class="table-toolbar">
        <div class="col-md-4 col-sm-12 col-xs-12 page_total" id="tableinfo"></div>
        <div class="col-md-8 col-sm-12 col-xs-12 page_icon">
            <div class="btn-group" id="pagination">
            </div>
        </div>
    </div>
    <!--table end-->

</div>
<!--message end-->
@section scripts {
    <script>
        var selvalue = [];
        $(document).ready(function () {
            mytable = $("#eventtable").myDataTable().TableList[0];
            mytable.settingTdData = myDataTableTr;
            mytable.settingTableInfo = function (tableinfoId, totalcnt, offsetcnt, nowpagecnt) {
                var totalclick = mytable.keepcheckid.length;
                $("#" + tableinfoId).html('總筆數:' + totalcnt + '，顯示' + (totalcnt <= 0 ? 0 : offsetcnt) + "~" + (offsetcnt + nowpagecnt - 1) );
            };
            mytable.GetData(1);
            var obj = {};
            obj.item = "物流公司";
            RegisterClicklink("#eventtable", ".edit", '@Url.Action("CompanyEdit")', {});
            RegisterClickAll("#chk_all", '#eventtable tbody .chksel', "#selvalue");
            RegisterDelete("#btn_del", '#eventtable .chksel:checked', '@Url.Action("SetCompanyDelete")', { keyindex: "3" });
            RegisterOrder("#eventtable", ".sortedit", '@Url.Action("EditCompanySeq")', obj);
        });

        function customertr(row, columnidx, idx, filedname, tableid, type, fileditemclass) {
            if (row["SendType"] == "M") {
                return "<td  class='text-center'>郵寄</td>";
            } else if (row["SendType"] == "D") {
                return "<td class='text-center'>宅配</td>";
            } else if (row["SendType"] == "F") {
                return "<td class='text-center'>貨運</td>";
            } else {

            } return "<td></td>";

        }
    </script>
}
