
@{
    ViewBag.Title = "選單程式模組管理";
}

<form class="form-horizontal form-bordered" method="Post" id="editform">
    <input id="hid_isAdd" type="hidden" name="isAdd" value='@ViewBag.IsAdd' />
    <div class="portlet light form-fit bordered">
        <div class="portlet-body form">
            <div class="form-horizontal form-bordered">
                <div class="form-body" id="form-body">

                    <div class="form-group">
                        <div class="col-md-3 col-sm-3 col-xs-12 bg-white mobile_white" style="cursor:pointer">
                            <img src="~/img/System36.gif" class="index" url="@Url.Action("Index", "PageEdit")"/><br />
                            <span style="margin-left:30px">圖文編輯</span>
                        </div>

                        <div class="col-md-3 col-sm-3 col-xs-12 bg-white mobile_white" style="cursor:pointer">
                            <img src="~/img/System29.gif" class="index" url="@Url.Action("Index", "Message")"/><br />
                            <span style="margin-left:30px">訊息管理</span>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 bg-white mobile_white" style="cursor:pointer">
                            <img src="~/img/System40.gif" class="index" url="@Url.Action("Index", "FAQ")"/><br />
                            <span style="margin-left:30px">常見問答</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
@section scripts {
    <script>
        $(document).ready(function () {
            $(".index").click(function () {
                var url = $(this).attr('url');
                window.location.href = url;
            });
        });

    </script>
}
