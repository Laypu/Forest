<!--page_content start-->
<div class="page_content">
    <!--trip_info start-->
    <div class="trip_info">
        <div class="container">
            <div class="item">
                <div class="img"><img src="@Url.Content("~/img/page_icon_06.png")" alt="day" /></div>
                <div class="font day">
                    <span class="big">@ViewBag.day</span>
                </div>
            </div>
            <div class="item">
                <div class="img"><img src="@Url.Content("~/UploadImage/Destination_Img")@ViewBag.Recommend_Detail_Img" alt="position" /></div><!--六大森林遊樂區page_icon_07~12(內洞、奧萬大、合歡山、大雪山、阿里山、墾丁)，後台可以選擇-->
                <div class="font">
                    @ViewBag.location
                </div>
            </div>
            <div class="item">
                <div class="img"><img src="@Url.Content("~/img/page_icon_05.png")" alt="attractions" /></div>
                <div class="font">
                    @Html.Raw(HttpUtility.HtmlDecode(ViewBag.content))
                </div>
            </div>
        </div>
    </div>
    <div class="trip_line"></div>
    <!--trip_info end-->
    <!--page top start-->
    <div class="page_top">
        <div class="container">
            <div class="col-md-7 col-sm-6 col-xs-12 page_top_left">
                <a href="#;return false;" title="Content area" accesskey="C" id="main-content">:::</a> &nbsp;
                <a href="" @Url.Action("Index", "Home") " title="Home"><i class="fas fa-home" aria-hidden="true"></i></a><span class="sr-only">Home</span><i class="fa fa-angle-right" aria-hidden="true"></i>
                <a href="@Url.Action("Index")" title="Recommended trips">Recommended trips</a><i class="fa fa-angle-right" aria-hidden="true"></i>
                @ViewBag.Title
            </div>
            <div class="col-md-5 col-sm-6 col-xs-12">
                @Html.Partial(Url.Content("~/Views/Shared/_page_top.cshtml"))
            </div>
        </div>
    </div>
    <!--page top end-->
    <!--page_con start-->
    <div class="page_con">
        <div class="container">

            <div class="edit_con">
                @Html.Raw(HttpUtility.HtmlDecode(ViewBag.HtmlContent))
            </div>
            <!--相關連結+檔案下載 start-->
            @Html.Partial(Url.Content("~/Views/Shared/page_bottom.cshtml"))
            <!--相關連結+檔案下載 end-->
            <div class="back_btn">
                <a href="@Url.Action("recommended_list")" title="Back"><span class="btn_01">Back</span></a>
            </div>

            <!--start_now start--><!--即刻出發一頁顯示3則行程-->
            @Html.Action("RecommendedTrip_Travel_list", new { id = ViewBag.ID, page = ViewBag.NowPag })
            <!--start_now end-->

        </div>
    </div>
    <!--page_con end-->

</div>
<!--page_content end-->
