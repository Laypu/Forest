@{ Layout = null;}
@model  ViewModels.MasterPageModel
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800%7CShadows+Into+Light" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/ContentWebsite/bootstrap.css">
    <link rel="stylesheet" href="~/ContentWebsite/font-awesome.css">
    <link rel="stylesheet" href="~/ContentWebsite/theme.css">
    <link rel="stylesheet" href="~/ContentWebsite/theme-elements.css">
    <link rel="stylesheet" href="~/ContentWebsite/style.css">
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-migrate-3.0.0.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.17.custom.min.js"></script>
    @if (Model.SEOScript != null)
    {
        if (Model.SEOScript[2] != "")
        {
            <title>@Model.SEOScript[2]</title>}
        if (Model.SEOScript[1] != "")
        {@Html.Raw(Model.SEOScript[1])}
    if (Model.SEOScript[0] != "")
    {
        <meta name="description" content="@Model.SEOScript[0]" />}
}
</head>
<body style="margin:0 auto;">
    <div class="con_box">
        @RenderBody()
    </div>
</body>
</html>
<script src="~/Scripts/theme.js"></script>
<script src="~/Scripts/theme.init.js"></script>
@RenderSection("scripts", required: false)
@Html.Raw(@ViewBag.SEOScript)