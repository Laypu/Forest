<!--banner start-->
@{
    Layout = WebSiteProject.Code.Common.GetIndexLayout(Model.LangId);
}

@model HomeViewModel 

<!--banner start-->
<div class="page_banner">
</div>
<!--banner end-->
@{
        var F_Model = (IEnumerable<WebSiteProject.Models.VideoItem>)ViewBag.F_Video;

        foreach (var item in F_Model)
        {
         <!--page_content start-->
        <div class="page_content">

            <!--page top start-->
            <div class="page_top">
                <div class="container">
                    <div class="col-md-7 col-sm-6 col-xs-12 page_top_left">
                        <a href="#;return false;" title="Content area" accesskey="C" id="main-content">:::</a> &nbsp;
                        <a href="@Url.Action("Index","Home")" title="Home"><i class="fas fa-home" aria-hidden="true"></i></a><span class="sr-only">Home</span><i class="fa fa-angle-right" aria-hidden="true"></i>
                        <a href="@Url.Action("F_Video_Index","Home")">Video</a><i class="fa fa-angle-right" aria-hidden="true"></i>
                        @item.Title
                    </div>
                    <div class="col-md-5 col-sm-6 col-xs-12">
                        <div class="page_top_right">
                            <a href="forward.html" target="_blank" title="forward(new windown)"><img src="~/img/icon_mail.png" alt=""></a>
                            <a href="print.html" target="_blank" title="print(new windown)"><img src="~/img/icon_print.png" alt="print"></a>
                            <a href="#" target="_blank" title="facebook share(new window)"><img src="~/img/icon_facebook.png" alt=""></a>
                            <a href="#" target="_blank" title="twitter share(new window)"><img src="~/img/icon_twitter.png" alt=""></a>
                            <a href="#" target="_blank" title="plurk share(new window)"><img src="~/img/icon_plurk.png" alt=""></a>
                        </div>
                    </div>
                </div>
            </div>
            <!--page top end-->
            <!--page_con start-->
            <div class="page_con">
                <div class="container">

                    <h2>@item.Title</h2>

                    <!--youtube start-->
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@item.VideoLink" frameborder="0" allowfullscreen title=""></iframe>
                    </div>
                    <!--youtube end-->

                    <div class="title_02"><i class="fas fa-video"></i>Video introduction</div>
                    <!--文繞圖 start-->
                    @if (string.IsNullOrEmpty(item.ImageFileOrgName) == false)
                    {
                        <!--圖片置左-->
                            if (item.ImageFileLocation == "1")
                            {
                                <img src="@Url.Content("~/UploadImage/VideoItem/")@item.ImageFileOrgName" class="img_padding" alt="@item.ImageFileDesc" align="left">
                            }
                            else if (item.ImageFileLocation == "2")
                            {
                                <div align="center"><p class="text_center"><img src="@Url.Content("~/UploadImage/VideoItem/")@item.ImageFileOrgName" class="img_padding" alt="@item.ImageFileDesc"></p></div>
                            }
                            else if (item.ImageFileLocation == "3")
                            {
                                <img src="@Url.Content("~/UploadImage/VideoItem/")@item.ImageFileOrgName" class="img_padding" alt="@item.ImageFileDesc" align="right">
                            }
                        
                    }
                    
                    <!--文繞圖 end-->
                    <!--edit_con start-->
                    <div class="edit_con">
                        @Html.Raw(item.HtmlContent)
                    </div>
                    <!--edit_con end-->
                    <!--相關連結+檔案下載 start-->
                    <div class="page_bottom">
                        @{
                            if (item.LinkUrl != null && item.LinkUrl != "")
                            {
                                <div class="link">
                                    <div class="title"><i class="fa fa-link" aria-hidden="true"></i>Link</div>
                                    <div class="con_font">
                                        <a href="@item.LinkUrl" target="_blank" title="@item.LinkUrlDesc (new window)">@item.LinkUrlDesc</a>
                                    </div>
                                </div>
                            }

                            if (item.UploadFileName != null && item.UploadFileName != "")
                            {
                                <div class="download">
                                    <div class="title"><i class="fa fa-download" aria-hidden="true"></i>Download</div>
                                    <div class="con_font">
                                        <a href="@Url.Action("FileDownLoad","Videos")?itemid=@item.ItemID.ToString()" target="_blank" title="@item.UploadFileDesc (new window)">@item.UploadFileDesc</a>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                    <!--相關連結+檔案下載 end-->

                    <div class="back_btn">
                        <a href="javascript:history.back()" title="Back"><span class="btn_01">Back</span></a>
                    </div>
                </div>
            </div>
            <!--page_con end-->
            <!--page_content end-->
            <!--breadcrumbs start-->
            <div class="breadcrumbs">
                <div class="container">
                    <div class="title">You are here</div>
                    <div class="font"><a href="index.html" title="Home">Home</a> / <a href="video.html" title="Vidoe">Video</a> / Seeing the beauty of Taiwan's forests</div>
                </div>
            </div>
            <!--breadcrumbs end-->
        </div>
    <!--page_content end-->
    }
}


