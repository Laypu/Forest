<script>

    window.onload = function () {
        $(".owl-prev").attr("title", "@(Common.GetLangText("Previous"))").attr("tabindex", "0");
        $(".owl-next").attr("title", "@(Common.GetLangText("Next"))").attr("tabindex", "0");
        $(".tp-leftarrow").attr("title", "@(Common.GetLangText("Previous"))");
        $(".tp-rightarrow").attr("title", "@(Common.GetLangText("Next"))");
        $("#mainNav>li>a").first().addClass("active").parent().siblings().children().removeClass("active");
    }

    $(function () {

        //初始畫面maplegend的ul 顏色
        $("#MapL>ul").children().first().children().attr("class", "active");

        
        //點擊maplegend換圖
        $("#MapL>ul>li>a").click(function () {
            
            $(this).addClass("active").parent().siblings().children().removeClass("active");
            var MapImg = `@Url.Content("~/UploadImage/MapLEGEND_Img/")`+$(this).attr("data-imgName");
            var MapName = $(this).attr("title");
            $("#MapLeg>div>img").attr('src', MapImg);
            $("#MapLeg>div>img").attr('alt', MapName);
            var index = $("#MapL>ul>li").index($(this).parent());
            if (index == 3) {
                $("#timebox").css("display", "");
            }
            else
            {
                $("#timebox").css("display","none")
            }
        });

        setInterval(GetTime, 6000);
        setInterval(GetDate, 864000000);
        function GetTime() {
            $.ajax({
                    type:"post",
                    contentType:"application/json",  
                    url:"@Url.Action("GetTime","Destination_Index")",
                success: function (result) {


                    $(".time").text(result);
                    },
                    error: function() {
                         
                    }
            })
        }
        function GetDate() {
            $.ajax({
                    type:"post",
                    contentType:"application/json",  
                    url:"@Url.Action("GetDate","Destination_Index")",
                success: function (result) {

                    $('.date').text(result);
                    
                    },
                    error: function() {
                         
                    }
            })
        }
        
    });

    


