<!--index banner start-->
@model  ViewModels.HomeViewModel
<div class="index_banner">
    <!--PC start-->
    <div class="owl-carousel owl-theme banner_01 hidden-xs">
        @foreach (var admain in Model.ADMain)
        {
            // string style = "width:100%;height:" + admain.AD_Height + "px";
            string style = "";
            string target = admain.Link_Mode == "1" ? "_self" : "_blank";
            <div class="item">
                <a href="@admain.Link_Href" target="@target">
                    <img src="@Url.Content("~/UploadImage/ADMain/" + admain.Img_Name_Thumb)" alt="" style="@style" /><!--建議尺寸800*600px-->
                </a>
            </div>
        }
    </div>
    <!--PC end-->
    <!--mobile start-->
    <div class="owl-carousel owl-theme banner_01 visible-xs">
        @foreach (var admain in Model.ADMobile)
        {
            string style = "width:100%;";
            string target = admain.Link_Mode == "1" ? "_self" : "_blank";
            <div class="item">
                <a href="@admain.Link_Href" target="@target">
                    <img src="@Url.Content("~/UploadImage/ADMain/" + admain.Img_Name_Thumb)" alt="@admain.AD_Name" style="@style" /><!--建議尺寸800*600px-->
                </a>
            </div>
        }
    </div>
    <!--mobile end-->

</div>
<!--index banner end-->
<!--index_about start-->
<div class="index_about">
    <div class="container">
        <div class="title_01" data-sr="enter top over 1.5s">@Model.SiteLayout.TestDataBaseTitle</div>
        <div class="con_font">
            @Html.Raw(Model.SiteLayout.TestDataBaseContent == null ? "" : Model.SiteLayout.TestDataBaseContent.Replace("\n", "<br>").Replace("<<br>", "<\n").Replace("><br>", ">\n"))
        </div>
        <div class="btn_box" data-sr="enter bottom over 2s"><a href="@Model.SiteLayout.TestDataBaseMore"><span class="btn_01">MORE</span></a></div>
    </div>
</div>
<!--index_about end-->
