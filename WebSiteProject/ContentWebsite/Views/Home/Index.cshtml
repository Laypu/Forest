<!--index_news start-->
<div class="index_news">
    <div class="container">

        <div class="title_01" data-sr="enter top over 1.5s">教學應用實例</div>

        <div class="list">
            @{
                foreach (var item in Model.MessageItemList)
                {
                    <div class="item">
                        <a href="@Url.Action("MessageView","Message",new { id= item .ItemID})">
                            <div class="item_pic imh_opacity">
                                <img src="@Url.Content("~/img/800x600.png")" class="bg_print" alt="" title="" style="background:url(@Url.Content("~/UploadImage/MessageItem/" + item.RelateImageFileName)); background-position:center ;background-size: cover;">
                            </div>
                            <div class="item_box">
                                <div class="item_title">@item.Title</div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>

        <div class="btn_box" data-sr="enter bottom over 2s"><a href="@Url.Action("Index","Message",new { itemid=Model.IndexMessageID})"><span class="btn_01">MORE</span></a></div>
    </div>
</div>
