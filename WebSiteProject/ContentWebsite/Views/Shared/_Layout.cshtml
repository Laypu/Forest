        <div class="container">
            @Html.Raw(Model.FooterString)
        </div>
    </footer>
    <!--footer end-->
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/theme.js")"></script>
    <script src="@Url.Content("~/Scripts/theme.init.js")"></script>
